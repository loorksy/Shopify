/* ستايل نظيف مستوحى من بساطة adidas مع الحفاظ على الإعدادات العامة */
:root {
  --accent: var(--accent-color, #27d36b);
  --surface-light: #f6f6f6;
  --surface-strong: #ededed;
  --surface-dark: #0a0b0c;
  --surface-dark-card: #111216;
  --text-strong: #0f1115;
  --text-soft: #4a4d55;
  --header-height: 84px;
  --card-shadow-soft: 0 10px 28px rgba(0, 0, 0, 0.08);
}

body {
  background: var(--light-background, #ffffff);
  color: var(--text_primary_light, var(--text-strong));
  font-family: var(--font-stack-body, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif);
}

@media (prefers-color-scheme: dark) {
  body {
    background: var(--dark-background, #05070b);
    color: var(--text_primary_dark, #f7f7f7);
  }
}

header, .header, .topbar, .toolbar {
  background: rgba(255, 255, 255, 0.94);
  border-radius: 0;
  box-shadow: 0 1px 0 rgba(0, 0, 0, 0.05);
  border: none;
}

.glass-blur-enabled header,
.glass-blur-enabled .header,
.glass-blur-enabled .topbar,
.glass-blur-enabled .toolbar {
  backdrop-filter: blur(var(--glass-blur-strength));
  -webkit-backdrop-filter: blur(var(--glass-blur-strength));
  background-color: rgba(255, 255, 255, 0.78);
}

@media (prefers-color-scheme: dark) {
  header, .header, .topbar, .toolbar {
    background: rgba(10, 11, 12, 0.96);
    box-shadow: 0 1px 0 rgba(255, 255, 255, 0.06);
  }

  .glass-blur-enabled header,
  .glass-blur-enabled .header,
  .glass-blur-enabled .topbar,
  .glass-blur-enabled .toolbar {
    background-color: rgba(15, 16, 20, 0.8);
  }
}

.m-header__wrapper {
  position: sticky;
  top: 0;
  z-index: 50;
  backdrop-filter: blur(calc(var(--glass-blur-strength) / 1.4));
  -webkit-backdrop-filter: blur(calc(var(--glass-blur-strength) / 1.4));
}

.m-header__main, .m-topbar, .m-header__desktop, .m-header__mobile {
  background: transparent;
  border: 0;
}

.m-header__container, .m-header__mobile-right, .m-header__actions {
  gap: 1.25rem;
}

.m-header__desktop .m-main-menu__link,
.m-header__mobile .m-main-menu__link,
.header__inline-menu a {
  font-weight: 700;
  letter-spacing: 0.02em;
  text-transform: uppercase;
  color: var(--text-strong);
}

@media (prefers-color-scheme: dark) {
  .m-header__desktop .m-main-menu__link,
  .m-header__mobile .m-main-menu__link,
  .header__inline-menu a {
    color: #f4f4f4;
  }
}

.m-topbar {
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13px;
  letter-spacing: 0.01em;
  background: #111;
  color: #fff;
}

/* الحاويات والكروت بأسلوب بسيط */
.sf__card, .m-product-card, .card, .collection-sidebar, .sidebar, .drawer, .drawer__inner,
.m-product-card__inner, .filters-toolbar, .facet-filters, .price-range, .tags-filter,
.m-collection-sidebar, .m-blog-card, .m-article-card, .m-collection-card {
  background: #ffffff;
  border-radius: var(--global-radius);
  border: 1px solid #e8e8e8;
  box-shadow: var(--card-shadow-soft);
  transition: transform 240ms ease, box-shadow 240ms ease, border-color 200ms ease;
}

@media (prefers-color-scheme: dark) {
  .sf__card, .m-product-card, .card, .collection-sidebar, .sidebar, .drawer, .drawer__inner,
  .m-product-card__inner, .filters-toolbar, .facet-filters, .price-range, .tags-filter,
  .m-collection-sidebar, .m-blog-card, .m-article-card, .m-collection-card {
    background: var(--surface-dark-card);
    border-color: rgba(255, 255, 255, 0.08);
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.32);
  }
}

.glass-blur-enabled .sf__card,
.glass-blur-enabled .collection-sidebar,
.glass-blur-enabled .drawer,
.glass-blur-enabled .filters-toolbar,
.glass-blur-enabled .m-product-card,
.glass-blur-enabled .m-collection-card {
  backdrop-filter: blur(var(--glass-blur-strength));
  -webkit-backdrop-filter: blur(var(--glass-blur-strength));
  background-color: rgba(255, 255, 255, 0.76);
}

@supports not (backdrop-filter: blur(1px)) {
  .glass-blur-enabled .sf__card,
  .glass-blur-enabled .collection-sidebar,
  .glass-blur-enabled .drawer,
  .glass-blur-enabled .filters-toolbar,
  .glass-blur-enabled .m-product-card,
  .glass-blur-enabled .m-collection-card {
    background-color: #ffffff;
  }
}

.m-product-card:hover,
.sf__card:hover,
.drawer:hover,
.collection-sidebar:hover {
  transform: translateY(-4px);
  box-shadow: 0 14px 30px rgba(0, 0, 0, 0.12);
}

/* صور المنتجات والكروت */
.m-product-card__media,
.m-product-card__media img,
.m-product-card__main-image,
.m-product-card__hover-image,
.m-collection-card__image,
.m-article-card__image,
.sf__card img {
  border-radius: var(--global-radius);
  overflow: hidden;
  background: #f7f7f7;
}

/* أزرار بسيطة مستوحاة من adidas */
.btn,
.button,
button,
.m-button,
input[type="submit"],
.sf__btn {
  border-radius: max(calc(var(--global-radius) - 6px), 6px);
  background: var(--accent);
  color: #ffffff;
  border: 1px solid rgba(0, 0, 0, 0.07);
  box-shadow: none;
  letter-spacing: 0.02em;
  font-weight: 700;
  transition: transform 180ms ease, background-color 180ms ease, opacity 180ms ease;
}

.btn:hover,
.button:hover,
button:hover,
.m-button:hover,
.sf__btn:hover {
  transform: translateY(-1px);
  background: #1fb45f;
}

/* شارات وتفاصيل سعر المنتج */
.m-price, .price, .product-price {
  color: var(--text-strong);
  font-weight: 700;
}

@media (prefers-color-scheme: dark) {
  .m-price, .price, .product-price {
    color: #f7f7f7;
  }
}

.m-product-card__title a,
.m-product-card__title,
.sf__card-title {
  color: var(--text-strong);
  font-weight: 700;
}

.m-product-card__vendor,
.m-product-card__rating,
.m-product-card__options,
.m-product-card__meta {
  color: var(--text-soft);
}

/* شريط جانبي للفلاتر بحواف ناعمة */
.collection-sidebar .card,
.collection-sidebar .sidebar-block,
.collection-sidebar .filter-group,
.facet-filters__fieldset {
  background: #f9f9f9;
  border-radius: var(--global-radius);
  padding: 18px;
  border: 1px solid #e6e6e6;
}

.collection-sidebar .filter-group__heading,
.facet-filters__label {
  color: var(--text-strong);
  font-weight: 800;
  letter-spacing: 0.01em;
}

.facet-filters .facet-checkbox input:checked + label,
.tags-filter input:checked + label,
.price-range input {
  border-color: var(--accent);
  color: var(--text-strong);
}

/* هيرو رئيسي بسيط وصور كبيرة مع نص قصير */
.sf__hero, .m-hero, .hero {
  background: #f7f7f7;
  border-radius: var(--global-radius);
  padding: clamp(20px, 4vw, 42px);
  border: 1px solid #ededed;
}

.sf__hero .hero__content, .m-hero__content, .hero__content {
  max-width: 620px;
  gap: 12px;
}

.sf__hero h1, .m-hero h1, .hero h1 {
  font-weight: 800;
  letter-spacing: 0.01em;
  margin-bottom: 8px;
}

.sf__hero .hero__media img, .m-hero__image img, .hero img {
  border-radius: var(--global-radius);
  object-fit: cover;
}

/* شبكة مجموعات ومنتجات بأقل حواف */
.m-product-card, .m-collection-card, .sf__card {
  padding: 14px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.m-product-card__info, .sf__card-body {
  gap: 6px;
}

.m-product-card__options, .m-product-card__meta {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

/* شريط فلاتر علوي */
.filters-toolbar, .m-collection-toolbar, .collection-toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  padding: 10px 14px;
  background: #ffffff;
  border: 1px solid #ededed;
  border-radius: var(--global-radius);
  box-shadow: none;
}

.filters-toolbar button, .filters-toolbar .btn, .collection-toolbar button {
  background: transparent;
  color: var(--text-strong);
  border: 1px solid #d9d9d9;
  border-radius: max(calc(var(--global-radius) - 8px), 6px);
  padding: 10px 16px;
  font-weight: 700;
}

.filters-toolbar button:hover, .filters-toolbar .btn:hover, .collection-toolbar button:hover {
  background: #111;
  color: #fff;
}

/* صفحة المنتج: صورة كبيرة ومساحة بيضاء */
.product, .product-template {
  background: #ffffff;
}

.product__media-wrapper, .m-product-media, .product__media {
  background: #f9f9f9;
  border-radius: var(--global-radius);
  padding: 10px;
  border: 1px solid #ededed;
}

.product-form, .product__info-wrapper, .product__info {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.product-form .product-form__buttons .btn,
.product-form .product-form__buttons button,
.product-form button[type="submit"],
.product-form .product-form__submit {
  width: 100%;
  padding: 14px 18px;
  font-size: 15px;
}

.product-form .product-form__variants .product-form__input--pill .product-form__radio,
.product-form .product-form__variants .product-form__input .product-form__radio {
  border-radius: 10px;
  border: 1px solid #d9d9d9;
  min-width: 46px;
  min-height: 44px;
}

.product__title, .product .product__title {
  font-weight: 800;
  letter-spacing: 0.01em;
}

.product__price, .product .price {
  font-size: 18px;
}

/* بطاقات الروابط الكبيرة في الصفحة الرئيسية */
.collection-list, .featured-collections {
  display: grid;
  gap: 18px;
}

.collection-list__item, .featured-collection-card {
  position: relative;
  border-radius: var(--global-radius);
  overflow: hidden;
  min-height: 220px;
}

.collection-list__item img, .featured-collection-card img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.collection-list__item .collection-card__content, .featured-collection-card .card__content {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: flex-end;
  padding: 18px;
  background: linear-gradient(180deg, rgba(0,0,0,0.02) 0%, rgba(0,0,0,0.65) 100%);
  color: #fff;
}

/* خلفيات الأقسام الرئيسية */
section,
.shopify-section,
.sf__section,
.m-section {
  background-color: transparent;
}

.sf__section .container,
.m-section .container,
.sf__section .sf__inner,
.m-section .sf__inner {
  border-radius: var(--global-radius);
}

/* حركة دخول المحتوى */
.page-motion-enabled #MainContent {
  opacity: 0;
  animation-duration: 0.32s;
  animation-timing-function: cubic-bezier(0.16, 0.84, 0.44, 1);
  animation-fill-mode: forwards;
}

.page-motion-enabled.page-motion-fade #MainContent { animation-name: m-page-fade; }
.page-motion-enabled.page-motion-slide #MainContent { animation-name: m-page-slide; }
.page-motion-enabled.page-motion-scale #MainContent { animation-name: m-page-scale; }

@keyframes m-page-fade {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes m-page-slide {
  from { opacity: 0; transform: translate3d(0, 18px, 0); }
  to { opacity: 1; transform: translate3d(0, 0, 0); }
}

@keyframes m-page-scale {
  from { opacity: 0; transform: scale(0.98); }
  to { opacity: 1; transform: scale(1); }
}

/* تأثير هوفر للكروت */
.m-product-card .m-product-card__media img,
.m-product-card .m-product-card__hover-image {
  transition: transform 340ms ease, filter 340ms ease;
}

.m-product-card:hover .m-product-card__media img {
  transform: scale(1.03);
  filter: drop-shadow(0 14px 24px rgba(0, 0, 0, 0.35));
}

/* الحفاظ على RTL */
[dir="rtl"] .m-product-card__tags { right: auto; left: 18px; }
[dir="rtl"] .collection-sidebar { text-align: right; }
