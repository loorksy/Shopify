/* تنسيق داكن احترافي بطابع لوحات التحكم */
:root {
  --dashboard-bg: #0b0b0f;
  --dashboard-card: rgba(var(--dashboard-surface), 0.9);
  --dashboard-card-strong: rgba(var(--dashboard-surface-strong), 0.92);
  --dashboard-border: rgba(255, 255, 255, 0.06);
  --dashboard-shadow: 0 18px 45px rgba(0, 0, 0, 0.38);
}

body {
  background: var(--dashboard-bg);
  color: #e8ecf1;
}

header, .header, .topbar {
  background: linear-gradient(120deg, rgba(17,18,26,0.96), rgba(17,18,26,0.9));
  border-radius: var(--global-radius);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.35);
  border: 1px solid var(--dashboard-border);
}

/* الحاويات والكروت */
.sf__card, .m-product-card, .card, .collection-sidebar, .sidebar, .drawer, .drawer__inner,
.m-product-card__inner, .filters-toolbar, .facet-filters, .price-range, .tags-filter,
.m-collection-sidebar, .m-blog-card, .m-article-card, .m-collection-card {
  background: var(--dashboard-card);
  border-radius: var(--global-radius);
  border: 1px solid var(--dashboard-border);
  box-shadow: var(--dashboard-shadow);
  transition: transform 320ms ease, box-shadow 320ms ease, border-color 240ms ease;
}

.glass-blur-enabled .sf__card,
.glass-blur-enabled .collection-sidebar,
.glass-blur-enabled .drawer,
.glass-blur-enabled .filters-toolbar,
.glass-blur-enabled .m-product-card,
.glass-blur-enabled .m-collection-card {
  backdrop-filter: blur(var(--glass-blur-strength));
  -webkit-backdrop-filter: blur(var(--glass-blur-strength));
  background-color: rgba(17, 18, 26, var(--glass-blur-opacity));
}

@supports not (backdrop-filter: blur(1px)) {
  .glass-blur-enabled .sf__card,
  .glass-blur-enabled .collection-sidebar,
  .glass-blur-enabled .drawer,
  .glass-blur-enabled .filters-toolbar,
  .glass-blur-enabled .m-product-card,
  .glass-blur-enabled .m-collection-card {
    background-color: rgba(17, 18, 26, 0.9);
  }
}

.m-product-card:hover,
.sf__card:hover,
.drawer:hover,
.collection-sidebar:hover {
  transform: translateY(-6px) scale(1.01);
  box-shadow: 0 24px 55px rgba(0, 0, 0, 0.45);
}

/* صور المنتجات والكروت */
.m-product-card__media,
.m-product-card__media img,
.m-product-card__main-image,
.m-product-card__hover-image,
.m-collection-card__image,
.m-article-card__image,
.sf__card img {
  border-radius: var(--global-radius);
  overflow: hidden;
}

/* أزرار عامة بلمسة خضراء */
.btn,
.button,
button,
.m-button,
input[type="submit"],
.sf__btn {
  border-radius: calc(var(--global-radius) - 4px);
  background: linear-gradient(145deg, rgba(42, 193, 127, 0.95), rgba(32, 166, 108, 0.95));
  color: #0b0b0f;
  border: 1px solid rgba(42, 193, 127, 0.6);
  box-shadow: 0 10px 24px rgba(42, 193, 127, 0.25);
  transition: transform 220ms ease, box-shadow 220ms ease, background 220ms ease;
}

.btn:hover,
.button:hover,
button:hover,
.m-button:hover,
.sf__btn:hover {
  transform: translateY(-2px) scale(1.01);
  box-shadow: 0 14px 32px rgba(42, 193, 127, 0.35);
  background: linear-gradient(145deg, rgba(50, 210, 138, 0.98), rgba(42, 193, 127, 0.98));
}

/* شارات وتفاصيل سعر المنتج */
.m-price, .price, .product-price {
  color: #e4f7ed;
}

.m-product-card__title a,
.m-product-card__title,
.sf__card-title {
  color: #f1f4f8;
}

.m-product-card__vendor,
.m-product-card__rating,
.m-product-card__options,
.m-product-card__meta {
  color: rgba(232, 236, 241, 0.75);
}

/* شريط جانبي للفلاتر */
.collection-sidebar .card,
.collection-sidebar .sidebar-block,
.collection-sidebar .filter-group,
.facet-filters__fieldset {
  background: var(--dashboard-card-strong);
  border-radius: var(--global-radius);
  padding: 16px;
  border: 1px solid var(--dashboard-border);
}

.collection-sidebar .filter-group__heading,
.facet-filters__label {
  color: #e8ecf1;
  font-weight: 700;
}

.facet-filters .facet-checkbox input:checked + label,
.tags-filter input:checked + label,
.price-range input {
  border-color: rgba(42, 193, 127, 0.6);
  color: #e8ecf1;
}

/* خلفيات الأقسام الرئيسية */
section,
.shopify-section,
.sf__section,
.m-section {
  background-color: transparent;
}

.sf__section .container,
.m-section .container,
.sf__section .sf__inner,
.m-section .sf__inner {
  border-radius: var(--global-radius);
}

/* حركة دخول المحتوى */
.page-motion-enabled #MainContent {
  opacity: 0;
  animation-duration: 0.32s;
  animation-timing-function: cubic-bezier(0.16, 0.84, 0.44, 1);
  animation-fill-mode: forwards;
}

.page-motion-enabled.page-motion-fade #MainContent { animation-name: m-page-fade; }
.page-motion-enabled.page-motion-slide #MainContent { animation-name: m-page-slide; }
.page-motion-enabled.page-motion-scale #MainContent { animation-name: m-page-scale; }

@keyframes m-page-fade {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes m-page-slide {
  from { opacity: 0; transform: translate3d(0, 18px, 0); }
  to { opacity: 1; transform: translate3d(0, 0, 0); }
}

@keyframes m-page-scale {
  from { opacity: 0; transform: scale(0.98); }
  to { opacity: 1; transform: scale(1); }
}

/* تأثير هوفر للكروت */
.m-product-card .m-product-card__media img,
.m-product-card .m-product-card__hover-image {
  transition: transform 340ms ease, filter 340ms ease;
}

.m-product-card:hover .m-product-card__media img {
  transform: scale(1.03);
  filter: drop-shadow(0 14px 24px rgba(0, 0, 0, 0.35));
}

/* الحفاظ على RTL */
[dir="rtl"] .m-product-card__tags { right: auto; left: 18px; }
[dir="rtl"] .collection-sidebar { text-align: right; }
