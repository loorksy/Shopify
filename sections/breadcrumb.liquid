{% liquid
  assign container = section.settings.container
  assign class = ''
  if section.settings.hide_on_mb
    assign class = 'm:hidden md:m:block'
  endif

  assign animation_effect = settings.animations
  assign animated = false
  if animation_effect != 'none'
    assign animated = true
    if section.settings.animations != 'inherit'
      assign animation_effect = section.settings.animations
    endif
  endif
%}

{% render 'breadcrumb', 
  container: container, 
  justify: section.settings.text_alignment, 
  class: class, 
  hide_current: section.settings.hide_current,
  animated: animated, 
  animation_effect: animation_effect
%}
{% schema %}
{
  "name": "Breadcrumb",
  "enabled_on": {
    "templates": [
      "product",
      "page",
      "collection"
    ]
  },
  "settings": [
    {
      "type": "select",
      "id": "container",
      "label": "نوع الحاوية",
      "default": "container",
      "options": [
        {
          "value": "container-fluid",
          "label": "افتراضي"
        },
        {
          "value": "w-full",
          "label": "عرض كامل"
        },
        {
          "value": "container",
          "label": "استخدام حاوية بصندوق"
        }
      ]
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "محاذاة النص",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "يسار"
        },
        {
          "value": "center",
          "label": "وسط"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "hide_current",
      "label": "Hide current page",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "hide_on_mb",
      "label": "Hide on mobile",
      "default": false
    },
    {
      "type": "header",
      "content": "Animations"
    },
    {
      "type": "select",
      "id": "animations",
      "label": "ظهور مع الأنيميشن",
      "default": "inherit",
      "options": [
        {"value": "inherit", "label": "وراثة الإعداد العام"},
        {"value": "fade-in", "label": "تلاشي"},
        {"value": "fade-in-up", "label": "تلاشي للأعلى"},
        {"value": "fade-in-left", "label": "تلاشي لليسار"},
        {"value": "fade-in-right", "label": "تلاشي لليمين"}
      ]
    }
  ],
  "presets": [
    {
      "name": "Breadcrumb"
    }
  ]
}
{% endschema %}
