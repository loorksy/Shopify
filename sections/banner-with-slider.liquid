{% liquid
  assign animation_effect = settings.animations
  assign animated = false
  if animation_effect != 'none'
    assign animated = true
    if section.settings.animations != 'inherit'
      assign animation_effect = section.settings.animations
    endif
  endif

  assign container = section.settings.container
  if container == 'w-full'
    assign container = 'container-full'
  endif

  assign classes = 'm-section m-banner-with-slider'
  if section.settings.custom_class != blank
    assign classes = classes | append: ' ' | append: section.settings.custom_class
  endif
  assign classes = classes | append: ' m-gradient' | append: ' m-color-' | append: section.settings.color_scheme
%}
<style>
  #m-banner-with-slider-{{ section.id }} {
    --items: 1;
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>

<section
  id="m-banner-with-slider-{{ section.id }}"
  class="{{ classes }}"
  data-section-type="banner-with-slider"
  data-section-id="{{ section.id }}"
>
  <div class="{{ container }} m-section-my m-section-py">
    {% render 'index-section-header', section_settings: section.settings %}
    <m-banner-with-slide
      data-id="{{ section.id }}"
      data-autoplay="{% if request.design_mode %}false{% else %}{{ section.settings.slide_autoplay }}{% endif %}"
      data-timeout="{{ section.settings.autorotate_speed | times: 1000 }}"
      class="sm:m:grid sm:m:grid-4-cols"
    >
      <div class="m-banner-with-slider__banner m-banner-with-slider__banner--medium sm:m:grid">
        <a
          href="{{ section.settings.button_link_1 }}"
          class="m-hover-box m-hover-box--scale-up m:block"
          aria-label="banner"
        >
          {% if section.settings.banner_image_1 %}
            {% render 'responsive-image', image: section.settings.banner_image_1, wrapper_class: 'm:w-full m:h-full' %}
          {% else %}
            <div class="m-placeholder-wrapper m:h-full m:w-full">
              {{
                'collection-4'
                | placeholder_svg_tag: 'm-placeholder-svg m-placeholder-svg--no-border m:w-full m:h-full m:object-cover'
              }}
            </div>
          {% endif %}
        </a>
        <div class="m-banner-with-slider__banner-content{% if animated %} m-scroll-trigger animate--{{ animation_effect }}{% endif %}">
          {% if section.settings.button_text_1 != blank %}
            <a
              href="{{ section.settings.button_link_1 | default: '#' }}"
              class="m-button {{ section.settings.button_style_1 | replace: 'sf__btn-primary', 'm-button--primary' | replace: 'sf__btn-secondary', 'm-button--secondary' | replace: 'sf__btn-link', 'm-button--link' | replace: 'sf__btn-white', 'm-button--white' }} {{ section.settings.button_size_1 }}"
              {% if animated %}
                data-cascade
                style="--animation-order: 1;"
              {% endif %}
            >
              {{ section.settings.button_text_1 }}
            </a>
          {% endif %}
        </div>
      </div>
      <div class="m-banner-with-slider__slider">
        <div class="m-slider m:h-full">
          <div class="m-slider-{{ section.id }} swiper-container swiper--equal-height m:h-full">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                {% liquid
                  assign content_positions = block.settings.content_position | split: ' '
                  assign text_alignment = block.settings.text_alignment
                  assign text_horizontal_alignment = content_positions.first
                  assign text_vertical_alignment = content_positions.last | strip

                  assign block_classes = ' m-gradient m-color-' | append: block.settings.color_scheme

                  assign text_color = block.settings.content_text_color

                  assign heading_color = ''
                  assign desc_color = 'm:text-color-subtext'
                  if text_color != 'inherit'
                    assign heading_color = heading_color | append: 'm:text-' | append: text_color
                    assign desc_color = 'm:text-' | append: text_color
                  endif
                %}
                <div
                  {{ block.shopify_attributes }}
                  data-slide="{{ forloop.index0 }}"
                  class="{{ block_classes }} swiper-slide m-bg-lazy"
                >
                  <div class="m-slide m-slide--{{ text_vertical_alignment }}-{{ text_horizontal_alignment }} m-slide--text-small">
                    <div class="m-slide__media m:h-full">
                      {% if block.settings.item_image != blank %}
                        {% render 'responsive-image',
                          image: block.settings.item_image,
                          wrapper_class: 'm:w-full m:h-full'
                        %}
                      {% else %}
                        {% capture current %}{% cycle 1, 2, 3 %}{% endcapture %}
                        {{
                          'collection-'
                          | append: current
                          | placeholder_svg_tag: 'm-placeholder-svg m:w-full m:h-full m:object-cover m-image'
                        }}
                      {% endif %}
                    </div>
                    <div class="m-slide__wrapper{% if animated %} m-slide-animate--{{ animation_effect }}{% endif %}">
                      <div class="m-richtext m-richtext--{{ block.settings.text_size | replace: 'h3', 'small' }} m-slide__content m:text-{{ text_alignment }}">
                        {% if block.settings.subheading != blank %}
                          <div class="m-richtext__subtitle m-slide__subtitle m:text-{{ text_color }} {{ block.settings.text_size | replace: 'h1', 'h5' | replace: 'h2', 'h6' | replace: 'h3', 'h6' }}">
                            {{ block.settings.subheading }}
                          </div>
                        {% endif %}

                        {% if block.settings.heading != blank %}
                          <h2 class="m-richtext__title m-slide__title {{ heading_color }} {{ block.settings.text_size }}">
                            {{ block.settings.heading }}
                          </h2>
                        {% endif %}

                        {% if block.settings.description != blank %}
                          <div class="m-richtext__description m-slide__description rte {{ desc_color }} {{ block.settings.text_size | replace: 'h1', 'h5' | replace: 'h2', 'h6' | replace: 'h3', 'h6' }}">
                            {{ block.settings.description }}
                          </div>
                        {% endif %}

                        {% if block.settings.button_text != blank %}
                          <div class="m-richtext__button m-slide__button">
                            <a
                              href="{{ block.settings.button_link | default: "#" }}"
                              class="m-button {{ block.settings.button_style | replace: 'sf__btn-primary', 'm-button--primary' | replace: 'sf__btn-secondary', 'm-button--secondary' | replace: 'sf__btn-link', 'm-button--link' | replace: 'sf__btn-white', 'm-button--white' }} {{ block.settings.button_size }}"
                            >
                              {{- block.settings.button_text -}}
                            </a>
                          </div>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
          {% render 'slider-controls',
            absolute: true,
            show_nav: false,
            pagination_class: 'm-dot-circle m-dot-circle--dark',
            extra_classes: 'm-slider-control--bottom-center'
          %}
        </div>
      </div>
      <div class="m-banner-with-slider__banner-group sm:m:grid">
        <div class="m-banner-with-slider__banner m-banner-with-slider__banner--small">
